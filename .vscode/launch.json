{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-vv",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Pytest: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "--no-cov", "${file}"],
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.local"
        },
    ]
}
